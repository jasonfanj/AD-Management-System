<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admanagement.repository.SysAdminMapper">
    
    <!-- 根据用户名查询管理员 -->
    <select id="selectByUsername" parameterType="string" resultType="com.admanagement.entity.SysAdmin">
        SELECT * FROM sys_admin WHERE username = #{username}
    </select>
    
    <!-- 查询管理员的所有角色ID -->
    <select id="selectRoleIdsByAdminId" parameterType="long" resultType="long">
        SELECT role_id
        FROM sys_admin_role
        WHERE admin_id = #{adminId}
    </select>
    
    <!-- 查询管理员的所有角色编码 -->
    <select id="selectRoleCodesByAdminId" parameterType="long" resultType="string">
        SELECT r.role_code
        FROM sys_admin_role ar
        INNER JOIN sys_role r ON ar.role_id = r.id
        WHERE ar.admin_id = #{adminId}
          AND r.status = 1
    </select>
    
</mapper>

