<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admanagement.repository.SysRoleMapper">
    
    <!-- 根据管理员ID查询角色列表 -->
    <select id="selectRolesByAdminId" parameterType="long" resultType="com.admanagement.entity.SysRole">
        SELECT r.*
        FROM sys_admin_role ar
        INNER JOIN sys_role r ON ar.role_id = r.id
        WHERE ar.admin_id = #{adminId}
          AND r.status = 1
        ORDER BY r.sort_order
    </select>
    
</mapper>

