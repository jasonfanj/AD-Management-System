{
  "name": "ad-management-frontend",
  "version": "1.0.0",
  "description": "AD管理系统前端 - 替代ADManager Plus、ADSelfService Plus、ADAudit Plus",
  "author": "AD Management Team",
  "license": "MIT",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage"
  },

  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.4.4",
    "js-cookie": "^3.0.5",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "qrcode": "^1.5.3",
    "sortablejs": "^1.15.0",
    "vue": "^3.3.8",
    "vue-i18n": "^9.5.0",
    "vue-router": "^4.2.5",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.1.0",
    "xlsx": "^0.18.5"
  },

  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/crypto-js": "^4.2.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^18.18.8",
    "@types/nprogress": "^0.2.1",
    "@types/qrcode": "^1.5.5",
    "@types/sortablejs": "^1.15.7",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.5.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.19"
  },

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },

  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Safari >= 12",
    "Edge >= 79"
  ],

  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{vue,css,scss,html}": [
      "prettier --write"
    ]
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ad-management-system.git"
  },

  "keywords": [
    "ad-management",
    "vue3",
    "element-plus",
    "admin",
    "dashboard",
    "ldap",
    "active-directory"
  ],

  "homepage": "https://admanagement.com"
}

